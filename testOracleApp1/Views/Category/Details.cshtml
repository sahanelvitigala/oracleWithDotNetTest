@model testOracleApp1.Models.ViewModels.CategoryEditRequest

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Show Category</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item"><a href="#">Home</a></li>
						<li class="breadcrumb-item active">Show Category</li>
					</ol>
				</div>
			</div>
		</div><!-- /.container-fluid -->
	</section>

	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<!-- left column -->
				<div class="col-md-12">
					<!-- general form elements -->
					<div class="card card-primary">
						<div class="card-header">
							<h3 class="card-title">Show Category</h3>
						</div>
						<!-- /.card-header -->

						@if (Model != null)
						{
							<!-- form start -->
							<form method="post">
								<div class="card-body">
									<div class="form-group">
										<label for="id"> ID</label>
										 <input type="text" class="form-control" id="id" name="id" asp-for="Id" readonly  />
									</div>
									<div class="form-group">
										<label for="name">Name</label>
										 <input type="text" class="form-control" id="name" name="name" asp-for="Name" readonly  />
									</div>
								</div>
								<!-- /.card-body -->

								<div class="card-footer">
									  <a class="btn btn-primary"
											asp-area=""
											asp-controller="Category"
											asp-action="Index"
										>
											Back
										</a>
								</div>
							</form>
						}
						else
						{
							<p> Category not found </p>
						}
					</div>
					<!-- /.card -->
				</div>
				<!--/.col (left) -->
						
			</div>
			<!-- /.row -->
		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->
